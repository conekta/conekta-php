{
    {{#composerPackageName}}
    "name": "{{.}}",
    {{/composerPackageName}}
    {{#artifactVersion}}
    "version": "{{.}}",
    {{/artifactVersion}}
    "description": "{{appDescriptionV2}}",
    "type": "library",
    "keywords": [
        "php",
        "sdk",
        "rest",
        "api",
        "conekta"
    ],
    "homepage": "https://www.conekta.com/",
    "license": "MIT",
    "authors": [
        {
            "name": "{{{packageAuthors}}}",
            "homepage": "https://{{{gitHost}}}/{{{gitUserId}}}/{{{gitRepoId}}}/contributors"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.3",
        "guzzlehttp/psr7": "^1.7 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0 || ^10.0",
        "friendsofphp/php-cs-fixer": "^3.5",
        "phpstan/phpstan": "1.10.57"
    },
    "autoload": {
        "psr-4": { "{{escapedInvokerPackage}}\\" : "{{srcBasePath}}/" }
    },
    "autoload-dev": {
        "psr-4": { "{{escapedInvokerPackage}}\\Test\\" : "{{testBasePath}}/" }
    }
}
